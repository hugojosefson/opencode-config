{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-sonnet-4.5",
  "lsp": {
    "typescript": {
      "disabled": true
    },
    "deno": {
      "command": [
        "deno",
        "lsp"
      ],
      "extensions": [
        ".ts",
        ".tsx",
        ".js",
        ".jsx",
        ".mts",
        ".mjs",
        ".cts",
        ".cjs",
        ".md",
        ".json",
        ".jsonc",
        ".css",
        ".scss",
        ".sass",
        ".less",
        ".html",
        ".svelte",
        ".vue",
        ".astro",
        ".yml",
        ".yaml",
        ".ipynb",
        ".sql",
        ".vto",
        ".njk"
      ],
      "initialization": {
        "enable": true,
        "lint": true
      }
    }
  }
}
